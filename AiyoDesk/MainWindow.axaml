<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
		xmlns:materialIcons="clr-namespace:Material.Icons.Avalonia;assembly=Material.Icons.Avalonia"
        mc:Ignorable="d" d:DesignWidth="1200" d:DesignHeight="780"
		MinWidth="600" MinHeight="400" Width="1200" Height="780"
		FontFamily="{StaticResource NotoSansTC}" FontSize="16" FontWeight="Bold"
        x:Class="AiyoDesk.MainWindow"
        Title="AiyoDesk">

	<Window.Styles>
		<Style Selector="Button.navButton">
			<Setter Property="FontSize" Value="16"/>
			<Setter Property="FontWeight" Value="500"/>
			<Setter Property="FontFamily" Value="{StaticResource NotoSansTC}"/>
		</Style>
		<Style Selector="TextBlock.h1">
			<Setter Property="FontSize" Value="24"/>
			<Setter Property="FontWeight" Value="Black"/>
			<Setter Property="FontFamily" Value="{StaticResource NotoSansTC}"/>
		</Style>
	</Window.Styles>
	
	<SplitView IsPaneOpen="True" Name="MainSplitPane"
            DisplayMode="CompactInline"
            OpenPaneLength="170">
		<SplitView.Pane>
			<Border Background="DarkSlateGray" BorderThickness="0" BorderBrush="Lime"
					Margin="0" Padding="5"
					>
				<Grid ColumnDefinitions="*" Name="MainSplitPaneGrid" Margin=""
						RowDefinitions="50,10,50,50,50,50,50,50,50,*,50"
						HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
					<TextBlock Text="AiyoDesk" Grid.Column="0" Grid.Row="0"
							   Padding="0,10,0,0" HorizontalAlignment="Center"
							   Classes="h1" Foreground="LimeGreen"
							   />
					<Button Content="{materialIcons:MaterialIconTextExt Kind=PackageVariantAdd, Text=套件安裝}"
							Classes="navButton" Margin="5"
							Grid.Column="0" Grid.Row="2"
							/>
					<Button Content="{materialIcons:MaterialIconTextExt Kind=Molecule, Text=模型管理}"
							Classes="navButton" Margin="5"
							Grid.Column="0" Grid.Row="3"
							/>
					<Button Content="{materialIcons:MaterialIconTextExt Kind=ViewModule, Text=模組管理}"
							Classes="navButton" Margin="5"
							Grid.Column="0" Grid.Row="4"
							/>
					<Button Content="{materialIcons:MaterialIconTextExt Kind=ShieldLock, Text=安全中心}"
							Classes="navButton" Margin="5"
							Grid.Column="0" Grid.Row="5"
							/>
				</Grid>
			</Border>
		</SplitView.Pane>
		
	</SplitView>
	
</Window>
